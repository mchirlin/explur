{
  "name": "hexplore-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "start": "node server.js",
    "watch:js": "watchify --extension=.jsx --extension=.js src/app.js -o public/js/bundle.js -v",
    "watch:css": "node-sass -w src/css/app.scss public/css/app.css",
    "watch": "npm run watch:js",
    "build:js": "browserify --extension=.jsx --extension=.js src/app.js -o public/js/bundle.js",
    "build:css": "node-sass src/css/app.scss public/css/app.css",
    "build": "npm run build:js"
  },
  "browserify": {
    "debug": true,
    "extension": [
      ".jsx",
      ".js"
    ],
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ],
      "envify",
      "uglifyify"
    ]
  },
  "dependencies": {
    "express": "^4.13.4",
    "flux": "^2.1.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "envify": "^3.4.0",
    "eslint-plugin-react": "^5.2.2",
    "key-mirror": "^1.0.1",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.1.2",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mchirlin/hexplore.git"
  },
  "author": "Michael Chirlin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mchirlin/hexplore/issues"
  },
  "homepage": "https://github.com/mchirlin/hexplore#readme"
}
